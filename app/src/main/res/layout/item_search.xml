<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="3dp"
    app:cardBackgroundColor="@color/item_transfer_color"
    app:cardCornerRadius="12dp"
    android:focusable="true"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:paddingVertical="3dp">

        <include
            android:id="@+id/layout_calendar"
            layout="@layout/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/layout_calendar"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/oswald"
                android:maxLength="30"
                android:maxLines="1"
                android:text="Shopping"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_toEndOf="@id/text_view_category_name"
                android:paddingHorizontal="3dp"
                android:text="â€¢"
                android:textColor="@color/scarlet"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_view_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_dot"
                android:ellipsize="end"
                android:fontFamily="@font/oswald"
                android:maxLength="30"
                android:maxLines="1"
                android:text="BIDV"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_view_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_category_name"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="120dp"
                android:ellipsize="end"
                android:fontFamily="@font/oswald_light"
                android:maxLines="1"
                android:text="Buy something"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/text_view_item_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/oswald_light"
            android:gravity="right"
            android:paddingEnd="6dp"
            android:text="120.500.000.000"
            android:textSize="14sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>