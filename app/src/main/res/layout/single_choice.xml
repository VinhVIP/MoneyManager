<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="com.vinh.moneymanager.models.SingleChoiceModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_choose_date"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@{model.selectedIndex == 0 ? @drawable/single_choice_bg_left_highlight : @drawable/single_choice_bg_left_default}"
            android:gravity="center"
            android:padding="4dp"
            android:text="Ngày"
            android:onClick="@{()->model.setSelectedIndex(0)}"
            android:textColor="@{model.selectedIndex == 0 ? @color/white : @color/black}" />

        <TextView
            android:id="@+id/tv_choose_week"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@{model.selectedIndex == 1 ? @drawable/single_choice_bg_mid_highlight : @drawable/single_choice_bg_mid_default}"
            android:gravity="center"
            android:padding="4dp"
            android:text="Tuần"
            android:onClick="@{()->model.setSelectedIndex(1)}"
            android:textColor="@{model.selectedIndex == 1 ? @color/white : @color/black}" />

        <TextView
            android:id="@+id/tv_choose_month"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@{model.selectedIndex == 2 ? @drawable/single_choice_bg_right_highlight : @drawable/single_choice_bg_right_default}"
            android:gravity="center"
            android:padding="4dp"
            android:text="Tháng"
            android:onClick="@{()->model.setSelectedIndex(2)}"
            android:textColor="@{model.selectedIndex == 2 ? @color/white : @color/black}" />

    </LinearLayout>
</layout>
