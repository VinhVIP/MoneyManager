<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddEditCategoryActivity">

    <include
        android:layout_marginBottom="8dp"
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/toolbar_layout"
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:minWidth="@dimen/title_width"
        android:text="Loại"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_below="@id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_type"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:checked="true"
            android:text="Thu" />

        <RadioButton
            android:id="@+id/radio_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi" />
    </RadioGroup>


    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:minWidth="@dimen/title_width"
        android:text="Tên"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ed_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/tv_category_name"
        android:background="@null"
        android:hint="Shopping"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_category_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:minWidth="@dimen/title_width"
        android:text="Mô tả"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_category_name"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/tv_description"
        android:background="@null"
        android:gravity="top"
        android:hint="..."
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_description"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Hoàn tất" />

</RelativeLayout>